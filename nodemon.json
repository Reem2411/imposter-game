{
  "watch": [
    "server.js",
    "public/**/*.js",
    "public/**/*.css",
    "public/**/*.html"
  ],
  "ext": "js,css,html",
  "ignore": [
    "node_modules/**/*",
    "public/node_modules/**/*",
    "*.log"
  ],
  "delay": 2000,
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  },
  "legacyWatch": true
}
